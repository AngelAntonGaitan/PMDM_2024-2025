<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <!--INFORMACION IMPORTANTE SOBRE MATERIAL3
     https://medium.com/@vptellez/migraci%C3%B3n-de-tema-appcompat-material-components-y-material-desing-3-para-android-a34fcd91ff56
     -->
    <style name="Theme.TipTime" parent="Theme.AppCompat.DayNight.DarkActionBar">
    <!-- Customize your light theme here. -->
    <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textViewStyle">@style/textViewStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/green_light</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>